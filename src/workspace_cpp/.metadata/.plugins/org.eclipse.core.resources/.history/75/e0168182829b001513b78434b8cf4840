#ifndef CCOUPLE_H_
#define CCOUPLE_H_

#include <string>
#include <vector>

class CCouple {
private:
	std::string m_m1Dir;
	std::string m_m2Dir;
	std::string m_outputDir;
	int m_nReproduceRate;
	int m_nBeginIndex;
	std::vector<std::string> m_testFiles1;
	std::vector<std::string> m_testFiles2;
	std::vector<std::string> m_testFilesDependence;
public:
	CCouple(const std::string& m1Dir, const std::string& m2Dir,
			const std::string& outputDir, int nReproduceRate,
			int nBeginIndex);
	~CCouple();
	int doX();
private:
	int doXOnce();
	void findTestFiles();
};

#endif /* CCOUPLE_H_ */
