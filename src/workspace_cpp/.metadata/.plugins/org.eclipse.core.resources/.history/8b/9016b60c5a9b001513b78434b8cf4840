#ifndef CCOMBGEN_H_
#define CCOMBGEN_H_

class CCombGen {
private:
	const std::vector<std::string>& m_args;
	enum {
		GROUP,
		MATE
	} m_mode;
public:
	CCombGen(const std::vector<std::string>& args);
	~CCombGen();

	void showCommands();
	int run();
private:
	bool parseCommands();
};

#endif /* CCOMBGEN_H_ */
