#ifndef CFILEREADER_H_
#define CFILEREADER_H_

#include <string>
#include <vector>

class CFileReader {
private:
	std::string m_filepath;
	std::string m_head;
	std::vector<std::string> m_testCases;
	std::string m_end;
public:
	CFileReader(const std::string& filepath);
	~CFileReader();

	const std::string& filepath() const {return m_filepath;}
	const std::string& head() const {return m_head;}
	const std::vector<std::string> testCases() const {return m_testCases;}
	const std::string end() const {return m_end;}
private:
	void readFile();
	bool getHead(const std::vector<char>& content, int &nCur);
	bool getTestCases(const std::vector<char>& content, int &nCur);
	bool getOneTestCase(const std::vector<char>& content, int &nCur);
	bool getEnd(const std::vector<char>& content, int &nCur);
};

#endif /* CFILEREADER_H_ */
